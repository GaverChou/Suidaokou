<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:handy_tv="http://schemas.android.com/apk/res-auto"
    style="@style/Header">

    <ImageView
        android:id="@+id/fragment_header_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_header_image_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/header_bg" />

    <TextView
        android:id="@+id/fragment_header_title"
        style="@style/Header.TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_header_subtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/header_title" />

    <TextView
        android:id="@+id/fragment_header_subtitle"
        style="@style/Header.SubTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/header_subtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_header_background"
        android:minHeight="?attr/actionBarSize" />
    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_header_buttom_background"
        android:layout_alignParentBottom="true"
        android:minHeight="?attr/actionBarSize" />

</RelativeLayout>
